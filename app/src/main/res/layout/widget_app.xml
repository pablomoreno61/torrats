<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#FFFACD"
    android:orientation="vertical"
    android:padding="@dimen/widget_linear_layout_padding">

    <TextView
        android:id="@+id/calendar_title_text_view_widget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/widget_layout_margin"
        android:textSize="@dimen/widget_recipe_name_text_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/calendar_start_at_text_view_widget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    </TextView>
</LinearLayout>